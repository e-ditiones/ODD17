<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml"
	schematypens="http://purl.oclc.org/dsdl/schematron"?>

<TEI xmlns="http://www.tei-c.org/ns/1.0">
    <teiHeader>
        <fileDesc>
            <titleStmt>
                <title>ODD de niveau 2</title>
            </titleStmt>
            <publicationStmt>
                <p>Publication Information</p>
            </publicationStmt>
            <sourceDesc>
                <p>Information about the source</p>
            </sourceDesc>
        </fileDesc>
    </teiHeader>

    <text>
        <body>
            <schemaSpec ident="ed2" source="Mother-compiled.xml" start="text">
                <moduleRef key="tei"/>
                <moduleRef key="textstructure" include="text body front back div opener closer"/>
                <moduleRef key="core" include="p lb sp stage speaker l lg list item head"/>
                <moduleRef key="transcr" include="fw"/>
                <moduleRef key="namesdates" include="persName placeName"/>

                <!-- Règles générales -->

                <elementSpec ident="text" mode="change">
                    <attList>
                        <attDef ident="xml:id" mode="change" usage="req"/>
                    </attList>
                </elementSpec>

                <elementSpec ident="lb" mode="change">
                    <attList>
                        <attDef ident="break" mode="change">
                            <valList mode="add" type="closed">
                                <valItem ident="no"/>
                            </valList>
                        </attDef>
                    </attList>
                </elementSpec>

                <elementSpec ident="div" mode="change">
                    <attList>
                        <attDef ident="type" mode="change">
                            <valList mode="add" type="closed">
                                <valItem ident="play"/>
                                <valItem ident="act"/>
                                <valItem ident="scene"/>
                                <valItem ident="castList"/>
                                <valItem ident="book"/>
                                <valItem ident="part"/>
                                <valItem ident="letter"/>
                            </valList>
                        </attDef>
                        <attDef ident="n" mode="change" usage="req"/>
                        <attDef ident="xml:id" mode="change" usage="req"/>
                    </attList>
                </elementSpec>

                <elementSpec ident="lg" mode="change">
                    <attList>
                        <attDef ident="n" mode="change" usage="req"/>
                        <attDef ident="xml:id" mode="change" usage="req"/>
                    </attList>
                </elementSpec>
                
                <elementSpec ident="l" mode="change">
                    <attList>
                        <attDef ident="n" mode="change" usage="req"/>
                        <attDef ident="xml:id" mode="change" usage="req"/>
                    </attList>
                </elementSpec>
                
                <elementSpec ident="sp" mode="change">
                    <attList>
                        <attDef ident="n" mode="change" usage="req"/>
                        <attDef ident="xml:id" mode="change" usage="req"/>
                    </attList>
                </elementSpec>
                

            </schemaSpec>
        </body>
    </text>
</TEI>
